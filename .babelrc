{
  "presets": [
    "env",
    "stage-0",
    "react"
  ],
  "plugins": [
    "react-hot-loader/babel",
    "add-module-exports",
    "transform-decorators-legacy",
    "lodash",
    ["transform-runtime", {
      "polyfill": true,
      "regenerator": true
    }],
    ["react-intl", {
      "messagesDir": "./translations/messages/",
      "enforceDescriptions": true,
      "extractSourceLocation": true
    }]
  ],
  "env": {
    "production": {
      "presets": ["react-optimize"],
      "plugins": ["babel-plugin-dev-expression"]
    }
  },
  "ignore": [
    "node_modules"
  ]
}
